@page
@model testApp.Pages.Clients.EditModel
@{
}

 <class="container">
<div class="row d-flex align-items-center" style="height: 100vh;">
    <div class="col align-items-center">
        @if (Model.errorMessage.Length > 0)
        {
            <div class="alert alert-danger" role="alert">
                @Model.errorMessage
            </div>
        }
        <form method="POST">
            <input type="hidden" name="id" value="@Model.clientInfo.id"></input>
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="name" value="@Model.clientInfo.name" placeholder="İsim" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
            </div>

            <div class="input-group mb-3">
                <input type="text" class="form-control" name="email" value="@Model.clientInfo.email" placeholder="Email" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>

            <div class="input-group  mb-3">
                <input type="text" class="form-control" name="phone" value="@Model.clientInfo.phone" placeholder="Phone" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>

            <div class="input-group  mb-3">
                <input type="text" class="form-control" name="adres" value="@Model.clientInfo.address" placeholder="Adres" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
            </div>

            <div class="input-group input-group-lg">
                <button type="submit" class="btn btn-primary">Oluştur</button>
            </div>
        </form>
        @if (Model.successMessage.Length > 0)
        {
            <div class="alert alert-success" role="alert">
                @Model.successMessage
            </div>
        }


    </div>
</div>
</div>
