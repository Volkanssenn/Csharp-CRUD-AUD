@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row row-cols-1 row-cols-md-2 g-4">

                @foreach (var item in Model.ListProduct)
        {
           
        <div class="col">
            <a href="urun-ozellikleri?ürün_id=@item.id">
            <div class="card">
                        <img src="@item.ImageUrl" width="444" height="590">
                <div class="card-body">
                    <h5 class="card-title">@item.title</h5>
                    <p class="card-text">@item.description</p>
                </div>
            </div>
            </a>
        </div>

        }

    </div>
</div>
