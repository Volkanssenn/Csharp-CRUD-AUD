@page
@model testApp.Pages.urun_duzenleModel
@{
}
<class ="container">
    <div class="row d-flex align-items-center" style="height: 100vh;">
        <div class="col align-items-center">
            @if (Model.errorMessage.Length > 0)
            {
                <div class="alert alert-danger" role="alert">
                    @Model.errorMessage
                </div>
            }
            <form method="POST">
                <input type="hidden" name="id" value="@Model.ListProduct.id">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="title" value="@Model.ListProduct.title" placeholder="Başlık" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                </div>

                <div class="input-group mb-3">
                    <input type="text" class="form-control" name="description" value="@Model.ListProduct.description" placeholder="Açıklama" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group  mb-3">
                    <input type="text" class="form-control" name="URL" value="@Model.ListProduct.ImageUrl" placeholder="Dosya Adı" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group  mb-3">
                    <input type="text" class="form-control" name="price" value="@Model.ListProduct.price" placeholder="Fiyat" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
                </div>

                <div class="input-group input-group-lg">
                    <button type="submit" class="btn btn-primary">Oluştur</button>
                </div>
            </form>
            @if (Model.successMessage.Length > 0)
            {
                <div class="alert alert-success" role="alert">
                    @Model.successMessage
                </div>
            }


        </div>
    </div>
